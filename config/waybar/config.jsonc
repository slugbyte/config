// -*- mode: jsonc -*-
{
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    "height": 25, // Waybar height (to be removed for auto height)
    "spacing": 15, // Gaps between modules (4px)
    "output": "DP-1",
    // Choose the order of the modules
    "modules-left": [
        "sway/workspaces",
        "sway/mode"
        // "sway/scratchpad"
        // "custom/media"
    ],
    // "modules-center": [
    //     "sway/window"
    // ],
    "modules-right": [
        // "mpd",
        // "idle_inhibitor",
        "tray",
        "pulseaudio",
        "network",
        "cpu",
        "memory",
        "temperature",
        "power-profiles-daemon",
        // "backlight",
        // "keyboard-state",
        // "sway/language",
        // "battery",
        // "battery#bat2",
        "clock"
        // "custom/power"
    ],
