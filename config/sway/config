# User Guide:  https://i3wm.org/docs/userguide.html

set $meta Mod4
set $alt Mod1
set $hyper Mod1+Mod4+Shift+ctrl

# Start XDG autostart .desktop files using dex. See also
# https://wiki.archlinux.org/index.php/XDG_Autostart
exec --no-startup-id dropbox start
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id flatpak run com.dropbox.Client &
exec --no-startup-id ibus-daemon -rxRd
exec --no-startup-id nm-applet
exec --no-startup-id 'eval $(gnome-keyring-daemon --start --components=secrets,ssh)'
exec --no-startup-id 'eval "$(ssh-agent -s)"'

exec swayidle -w \
	timeout 300 'swaylock -f -c 444444' \
	timeout 600 'swaymsg "output * power off"' \
		resume 'swaymsg "output * power on"' \
	before-sleep 'swaylock -f -c 444444'

# reliad waybar
exec_always 'killall waybar; waybar'

# Use pactl to adjust volume in PulseAudio  .
bindsym XF86AudioMute exec pamixer -t
bindsym XF86AudioLowerVolume exec pamixer -d 5
bindsym XF86AudioRaiseVolume exec pamixer -i 5

# Use Mouse+$meta to drag floating windows to their wanted position
floating_modifier $meta

# start a terminal
bindsym $meta+Return exec ghostty 
# firefox
bindsym $hyper+Return exec firefox
# [t]ake screenshot
bindsym $meta+t exec --no-startup-id maim --select "/home/$USER/Downloads/sc-$(date +'%Y-%m-%d-%H%M%S')-unknown.png"

# kill focused window
bindsym $meta+w kill
bindsym $meta+backspace kill

# rofi
bindsym $meta+space  exec "rofi -combi-modi window,drun,ssh -theme lackluster -show combi -monitor -0"


# change focus
bindsym $meta+y focus left
bindsym $meta+n focus down
bindsym $meta+e focus up
bindsym $meta+o focus right

# alternatively, you can use the cursor keys:
# bindsym $meta+Left focus left
# bindsym $meta+Down focus down
# bindsym $meta+Up focus up
# bindsym $meta+Right focus right

# move/swap focused window
bindsym $hyper+y move left
bindsym $hyper+n move down
bindsym $hyper+e move up
bindsym $hyper+o move right

# alternatively, you can use the cursor keys:
# bindsym $meta+Shift+Left focus left; move left
# bindsym $meta+Shift+Down focus down; move down
# bindsym $meta+Shift+Up move up
# bindsym $meta+Shift+Right move right

# split in horizontal orientation
bindsym $meta+s split h

# split in vertical orientation
bindsym $meta+h split v

# toggle fullscreen
bindsym $meta+f fullscreen toggle

# toggle float
bindsym $hyper+f floating toggle

# toggle layout (Mode)
bindsym $meta+m layout toggle stacking splith splitv

# focus the parent container
# bindsym $meta+a focus parent

# focus the child container
#bindsym $meta+d focus child

# speed switch workspace
# bindsym $hyper+n workspace 1
# bindsym $hyper+e workspace 2
# bindsym $hyper+o workspace 3
# bindsym $hyper+i workspace 4
# 
bindsym $meta+l workspace 1
bindsym $meta+comma workspace 2
bindsym $meta+period workspace 3
bindsym $meta+slash workspace 4

# speed move window to workspace
bindsym $hyper+l move container to workspace 1; workspace 1
bindsym $hyper+comma move container to workspace 2; workspace 2
bindsym $hyper+period move container to workspace 3; workspace 3
bindsym $hyper+slash move container to workspace 4; workspace 4

# switch workspace
bindsym $meta+1 workspace 1
bindsym $meta+2 workspace 2
bindsym $meta+3 workspace 3
bindsym $meta+4 workspace 4
bindsym $meta+5 workspace 5
bindsym $meta+6 workspace 6
bindsym $meta+7 workspace 7
bindsym $meta+8 workspace 8
bindsym $meta+9 workspace 9
bindsym $meta+0 workspace 10

# move window to workspace
bindsym $hyper+1 move container to workspace 1; workspace 1
bindsym $hyper+2 move container to workspace 2; workspace 2
bindsym $hyper+3 move container to workspace 3; workspace 3
bindsym $hyper+4 move container to workspace 4; workspace 4
bindsym $hyper+5 move container to workspace 5; workspace 5
bindsym $hyper+6 move container to workspace 6; workspace 6
bindsym $hyper+7 move container to workspace 7; workspace 7
bindsym $hyper+8 move container to workspace 8; workspace 8
bindsym $hyper+9 move container to workspace 9; workspace 9
bindsym $hyper+0 move container to workspace 10; workspace 10

bindsym $hyper+r reload 
# bindsym $meta+Shift+l exec "swaymsg exit"

bindsym $meta+r mode "resize"
# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym y resize shrink width 50 px or 50 ppt
        bindsym n resize grow height 50 px or 50 ppt
        bindsym e resize shrink height 50 px or 50 ppt
        bindsym o resize grow width 50 px or 50 ppt
        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 50 px or 50 ppt
        bindsym Down resize grow height 50 px or 50 ppt
        bindsym Up resize shrink height 50 px or 50 ppt
        bindsym Right resize grow width 50 px or 50 ppt

        # back to normal: Enter or Escape or $meta+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        # bindsym $meta+r mode "default"
}

font pango:HackerHacker 12


