#!/bin/bash
# video1080p - Scale video to 1080p
#
# Scales video to 1920x1080 using H.264 codec. Fast encoding preset
# for quick conversions. Good for sharing videos online.
#
# Usage:
#   video1080p <input_file>
#
# Examples:
#   video1080p recording.mov      # creates recording-1080p.mp4
#   video1080p ~/Videos/clip.avi  # creates ~/Videos/clip-1080p.mp4

[[ "$1" == "--describe" ]] && echo "Scale video to 1080p with H.264 codec" && exit 0

if [[ "$1" == "--help" ]]; then
    echo "Usage: video1080p <input_file>"
    echo ""
    echo "Scale video to 1080p with H.264 codec."
    echo "  input_file   Video file to convert"
    echo ""
    echo "Output: <input>-1080p.mp4 (1920x1080)"
    echo "Codec: H.264, fast preset, CRF 23, audio copy"
    exit 0
fi

if [[ -z "$1" ]]; then
    echo "Usage: video1080p <input_file>"
    exit 1
fi

ffmpeg -i $1 -vf scale=1920:1080 -c:v libx264 -preset fast -crf 23 -c:a copy ${1%.*}-1080p.mp4
