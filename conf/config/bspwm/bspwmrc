#!/bin/bash

source $MOLD_ROOT/plug/wm_style.sh

# tell x what the monitor order is
xrandr \
  --output $WM_STYLE_MONITOR_MAIN \
  --mode '1920x1080' --rotate normal \
  --set TearFree on

bspc monitor $WM_STYLE_MONITOR_MAIN -d 1 2 a b 

bspc monitor -f $WM_STYLE_MONITOR_MAIN

bspc config top_padding $WM_STYLE_BAR_HEIGHT

bspc config active_border_color $WM_STYLE_ACTIVE_COLOR
bspc config normal_border_color $WM_STYLE_NORMAL_COLOR
bspc config focused_border_color $WM_STYLE_FOCUSED_COLOR

bspc config window_gap $WM_STYLE_GAP_NONE
bspc config border_width $WM_STYLE_BORDER_EXTRA_SMALL

bspc config monitor_swap $WM_STYLE_MONITOR_RIGHT $WM_STYLE_MONITOR_LEFT

bspc config split_ratio 0.5

# load init scripts
for init_script in $MOLD_ROOT/init/wm/*;do
  source $init_script
done

# xinput set-prop 14 293 0.8
