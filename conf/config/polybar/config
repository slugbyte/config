[section/base]
  top = true
  offset-x = 70
  offset-y = 0
  enable-ipc = true
  override-redirect = true
  width = 55%
  height = 25px
  padding = 2
  border-top-size = 6
  background = #211f1f
  format-foreground = #6f7377

[bar/main]
  inherit = section/base
  modules-left = time date utc cpu memory filesystem


[module/time]
  type = custom/script
  interval = 1
  exec = date +" %H:%M:%S "
  tail = true
  format-foreground = #6a7f93

[module/date]
  type = custom/script
  interval = 1
  exec = date +" %^b:%m_%d:%^a"
  tail = true
  format-foreground = #6f7377

[module/utc]
  type = custom/script
  interval = 1
  exec = date --utc +" UTC(%H:%M:%S %m-%d) "
  tail = true
  format-foreground = #6f7377

[module/cpu]
  type = internal/cpu
  label = [CPU %percentage%]
  interval = 2
  format-foreground = #6f7377

[module/filesystem]
  type = internal/fs
  mount-0 = /
  label-mounted = [SSD %percentage_used%]
  format-foreground = #ff0000
  format-mounted-foreground = #6f7377

[module/memory]
  type = internal/memory
  label = [MEM %percentage_used%]
  interval = 3
  format-foreground = #6f7377

