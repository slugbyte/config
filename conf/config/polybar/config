[section/base]
  top = true
  offset-x = 70
  offset-y = 0
  enable-ipc = true
  override-redirect = true
  width = 30%
  height = 25px
  padding = 2
  border-top-size = 6
  background = #211f1f

[bar/main]
  inherit = section/base
  modules-left= cpu filesystem memory pulseaudio date

[module/date]
  type = internal/date
  interval = 1
  date = " %Y-%m-%d %H:%M:%S "

[module/hostname]
  type = custom/script
  exec = uuidgen
  interval = .1
  tail = true

[module/cpu]
  type = internal/cpu
  label = [CPU %percentage%%]
  interval = 2

[module/memory]
  type = internal/memory
  label = [MEM %percentage_used%%]
  internal = 3

[module/pulseaudio]
  type = internal/pulseaudio
  sink = alsa_output.pci-0000_0d_00.4.analog-surround-21
  label-muted = [VOL X]
  label-volume = [VOL %percentage%%]
  interval = 1

[module/filesystem]
  type = internal/fs
  mount-0 = /
  label-mounted = [DISK %percentage_used%%]
  internal = 20
