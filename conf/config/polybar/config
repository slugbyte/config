[colors]
  backbround = #ffae00

[section/base]
  top = true
  width = 100%
  height = ${env:WM_STYLE_BAR_HEIGHT:}
  offset-x = 0
  offset-y = 0
  enable-ipc = true
  override-redirect = true

[bar/main]
  inherit = section/base
  monitor = ${env:WM_STYLE_MONITOR_MAIN:}
  modules-left = bspwm
  modules-right = cpu memory filesystem pulseaudio date battery

[module/battery]
  type = internal/battery
  full-at = 99
  battery = BAT0
  adapter = AD
  label-charging = (%percentage%)

[module/date]
  type = internal/date
  interval = 1
  date = " %Y-%m-%d %H:%M:%S "

[module/hostname]
  type = custom/script
  exec = uuidgen
  interval = .1
  tail = true

[module/cpu]
  type = internal/cpu
  label = [CPU %percentage%%]
  interval = 2

[module/bspwm]
  type = internal/bspwm
  label-dimmed-foreground = #555
  label-focused = " 0"
  label-occupied= " ~"
  label-empty = " *"
  label-urgent = " !"

[module/memory]
  type = internal/memory
  label = [MEM %percentage_used%%]
  internal = 3

[module/pulseaudio]
  type = internal/pulseaudio
  sink = alsa_output.pci-0000_0e_00.4.analog-surround-21
  label-muted = [VOL X]
  label-volume = [VOL %percentage%]
  interval = 1

[module/filesystem]
  type = internal/fs
  mount-0 = /
  label-mounted = [DISK %percentage_used%%]
  interval = 20 
